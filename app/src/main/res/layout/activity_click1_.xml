
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.addetect.addetect.Scanning"
    android:nestedScrollingEnabled="false"
    android:layoutMode="opticalBounds"
    android:paddingEnd="@dimen/abc_action_bar_progress_bar_size"
    android:paddingStart="@dimen/abc_action_bar_progress_bar_size">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:orientation="vertical"
        android:theme="@style/AppTheme"
        android:visibility="visible"
        android:translationZ="@dimen/abc_action_bar_stacked_max_height"
        android:outlineProvider="paddedBounds"
        android:layout_gravity="center|top"
        style="@style/Base.DialogWindowTitleBackground.AppCompat"
        android:layout_alignParentTop="true">

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:id="@+id/app_name"
            android:singleLine="false"
            android:text="List Of Apps"
            android:background="#a9b287"
            android:height="@dimen/abc_action_bar_default_height_material" />


        <ListView
       android:id="@android:id/list"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
            android:background="#7d9cf3"
            android:foreground="#48b9c7"
            android:clickable="true"
            android:fastScrollAlwaysVisible="false"
            android:fastScrollEnabled="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:footerDividersEnabled="false"
            android:layoutMode="clipBounds"></ListView>>

</LinearLayout>
</RelativeLayout>
